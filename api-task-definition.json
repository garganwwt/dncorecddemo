{
    "memory": "1024",
    "cpu": "512",
    "family": "fargate-task-definition",
    "requiresCompatibilities": [
       "FARGATE"
    ],
    "containerDefinitions": [
       {
          "essential": true,
          "name": "dncoreapi",
          "image": "ghcr.io/srirangv/dncorecicddemoghactions/dncoredb:latest",
          "repositoryCredentials": {
            "credentialsParameter": "arn:aws:secretsmanager:us-east-1:367444460268:secret:demo/imageregistry-8SNhU5"
          },
          "environment" : [
            { "name" : "DB_CONN_STR", "value" : "${{ secrets.DB_CONN_STR }}" }
          ],
          "portMappings": [ 
            { 
               "containerPort": 5001,
               "hostPort": 80,
               "protocol": "tcp"
            }
         ],
          "cpu": 512,
          "memoryReservation": 1024
       }
    ],
    "executionRoleArn": "arn:aws:iam::367444460268:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::367444460268:role/ecsTaskExecutionRole"
 }